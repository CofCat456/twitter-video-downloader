{
	"name": "Twitter Video Downloader",
	"description": "Click a button to download a video on a Twitter post, even on private profiles.",
	"version": "1.0.10",
	"manifest_version": 3,
	"background": {
		"service_worker": "background.js"
	},
	"permissions": ["storage", "activeTab", "scripting", "cookies"],
	"host_permissions": ["*://*.twitter.com/*", "*://twitter.com/*"],
	"action": {
		"default_popup": "popup.html",
		"default_title": "Twitter Video Downloader: Click while on a Twitter post to download its video",
		"default_icon": {
			"16": "/images/tvd16.png",
			"32": "/images/tvd32.png",
			"48": "/images/tvd48.png",
			"128": "/images/tvd128.png"
		}
	},
	"icons": {
		"16": "/images/tvd16.png",
		"32": "/images/tvd32.png",
		"48": "/images/tvd48.png",
		"128": "/images/tvd128.png"
	}
}
